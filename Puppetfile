mod 'theforeman/git',           :git => 'https://github.com/theforeman/puppet-git'
mod 'theforeman/tftp',          :git => 'https://github.com/theforeman/puppet-tftp'

# Top-level modules
mod 'theforeman/foreman',       :git => 'https://github.com/theforeman/puppet-foreman'
